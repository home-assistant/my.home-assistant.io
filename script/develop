# Stop on errors
set -e

cd "$(dirname "$0")/.."

rm -rf dist
cp -r public dist

# Compile once before serving so eleventy has
# valid JS to render.
# We can't watch dist/manifest.json because .gitignore
# is ignored by default and don't want to maintain own ignore.
yarn rollup -c

# Quit all background tasks when script exits
trap "kill 0" EXIT

yarn serve dist &
yarn eleventy --watch &
yarn rollup -c --watch
wait
